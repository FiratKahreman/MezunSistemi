
@{
    ViewBag.Title = "Giris";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="KTÜ Mezun Sistemi">
    <meta name="author" content="KTÜ">
    <title>KTÜ Mezun Sistemi</title>
    <!-- Favicon -->
    <link rel="icon" href="~/dosyalar/img/brand/favicon.png" type="image/png">
    <link rel="stylesheet" href="~/dosyalar/css/responsive.css" />
    <link rel="stylesheet" href="~/dosyalar/css/bootstrap.min.css" />
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/dosyalar/fonts/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/dosyalar/css/argon.css" type="text/css">
</head>

<body class="bg-default">
    
    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        
                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                            <img class="img-responsive rounded-circle" width="150" height="150" src="~/dosyalar/images/logo/ktulogobeyaz.jpg" />
                            <h1 class="text-white"><br><br>KTÜ Mezun Sistemi'ne Hoşgeldiniz!</h1>
                            <p class="text-lead text-white">Mezun Sistemi, mezunların öğrencilerle etkileşim kurabileceği bir platformdur.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7">
                    <div class="card bg-secondary border-0 mb-0">
                        <div class="card-header bg-transparent pb-5">
                            <div class="text-muted text-center mt-2 mb-3"><small>Eğer öğrenciyseniz lütfen KTÜ BYS Sistemi kullanarak giriş yapınız.</small></div>
                            <div class="btn-wrapper text-center">
                                <a href="#">
                                    <span class="btn-inner--icon"><img src="~/dosyalar/img/icons/common/ktubyslogo.png"></span>
                                    <span class="btn-inner--text">BYS ile Giriş Yap</span>
                                </a>

                            </div>
                        </div>
                        <div class="card-body px-lg-5 py-lg-5">
                            <div class="text-center text-muted mb-4">
                                <small>Öğrenci değilseniz mail adresiniz ve şifrenizi giriniz.</small>
                            </div>
                            <form role="form">
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Email" type="email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Şifre" type="password">
                                    </div>
                                </div>
                                <div class="custom-control custom-control-alternative custom-checkbox">
                                    <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                                    <label class="custom-control-label" for=" customCheckLogin">
                                        <span class="text-muted">Beni Hatırla</span>
                                    </label>
                                </div>
                                <div class="text-center">
                                    <a href="~/Sosyal/Index" type="button" class="btn btn-primary my-4">Giriş</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6">
                            <a href="#" class="text-light"><small>Şifremi Unuttum</small></a>
                        </div>
                        <div class="col-6 text-right">
                            <a href="~/Giris/KayitOl" class="text-light"><small>Hesap Aç</small></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="py-5" id="footer-main">
        <div class="container">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-6">
                    <div class="copyright text-center text-xl-left text-muted">
                        &copy; 2022 <a href="https://www.creative-tim.com" class="font-weight-bold ml-1" target="_blank">Karadeniz Teknik Üniversitesi</a>
                    </div>
                </div>
                <div class="col-xl-6">
                    <ul class="nav nav-footer justify-content-center justify-content-xl-end">
                        <li class="nav-item">
                            <a href="~/Giris/Nedir" class="nav-link" target="_blank">Mezun Sistemi Nedir?</a>
                        </li>
                        <li class="nav-item">
                            <a href="http://blog.creative-tim.com" class="nav-link" target="_blank">Sorun Bildir</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/creativetimofficial/argon-dashboard/blob/master/LICENSE.md" class="nav-link" target="_blank">Bize Ulaşın</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/dosyalar/jquery/dist/jquery.min.js"></script>
    <script src="~/dosyalar/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dosyalar/js-cookie/js.cookie.js"></script>
    <script src="~/dosyalar/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/dosyalar/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Argon JS -->
    <script src="~/dosyalar/js/argon.js?v=1.2.0"></script>
</body>

</html>