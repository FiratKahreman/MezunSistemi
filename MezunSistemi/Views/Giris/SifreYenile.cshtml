
@{
    ViewBag.Title = "SifreYenile";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="KTÜ Mezun Sistemi Kayıt Ekranı">
    <meta name="author" content="Creative Tim">
    <title>KTÜ Mezun Sistemi - Kayıt Ol</title>
    <!-- Favicon -->
    <link rel="icon" href="~/dosyalar/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/dosyalar/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/dosyalar/fonts/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/dosyalar/css/argon.css" type="text/css">
</head>

<body class="bg-default">

    <!-- Main content -->
    <div class="main-content">
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            <!-- Table -->
            <div class="row justify-content-center">
                <div class="">
                    <div class="card bg-secondary border-0">

                        <div class="card-body px-lg-5 py-lg-5">
                            <div class="text-center text-muted mb-4">
                                <p class="text-lead text-black">Şifremi Unuttum</p>
                                <small>Lütfen kayıt olurken kullandığınız maili yazınız. Mail adresinize gönderilen link üzerinden şifrenizi belirleyebilirsiniz.</small>
                            </div>
                            <form role="form">                                
                                <div class="form-group">
                                    <div class="input-group input-group-merge input-group-alternative mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Email" type="email">
                                    </div>
                                </div>
                                
                                <div class="text-center">
                                    <button type="button" class="btn btn-primary mt-4">Mail Gönder</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a href="~/Giris/Giris" class="text-light"><small>Giriş Ekranına Geri Dön</small></a>
                    </div>

                </div>
            </div>
        </div>
    </div>
   
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/dosyalar/jquery/dist/jquery.min.js"></script>
    <script src="~/dosyalar/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dosyalar/js-cookie/js.cookie.js"></script>
    <script src="~/dosyalar/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/dosyalar/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Argon JS -->
    <script src="~/dosyalar/js/argon.js?v=1.2.0"></script>
</body>

</html>

